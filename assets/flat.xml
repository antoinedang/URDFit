<mujoco>
  <visual>
    <global offwidth="1080" offheight="720"/>
  </visual>

  <include file="robot_urdf.xml"/>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".3 .1 .1"
     rgb2=".4 .2 .2" width="300" height="300" mark="none"/>
    <material name="grid" texture="grid" texrepeat="1 1"
     texuniform="true" reflectance=".2"/>
  </asset>

  <worldbody>
    <light name="light" pos="0 0 3"/>
    <geom name="floor" type="plane" pos="0 0 -.5" size="100 100 .1" material="grid"/>
    <camera name="fixed" pos="0 -1.3 .5" xyaxes="1 0 0 0 1 2"/>
    <camera name="track" mode="trackcom" pos="0 -4 2.5" xyaxes="1 0 0 0 1 2" target="humanoid" />
    <geom name="green_sphere"  size=".06" pos=".1 .1 .1" rgba="0 1 0 0.25"/>
  </worldbody>

</mujoco>